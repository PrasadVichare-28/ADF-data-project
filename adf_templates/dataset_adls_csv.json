{
  "name": "DS_ADLS_Transactions_CSV",
  "type": "Microsoft.DataFactory/factories/datasets",
  "properties": {
    "linkedServiceName": {
      "referenceName": "LS_ADLS",
      "type": "LinkedServiceReference"
    },
    "parameters": {
      "yyyy": {
        "type": "String"
      },
      "mm": {
        "type": "String"
      },
      "dd": {
        "type": "String"
      },
      "filesystem": {
        "type": "String"
      }
    },
    "type": "DelimitedText",
    "typeProperties": {
      "location": {
        "type": "AzureBlobFSLocation",
        "fileSystem": "@{dataset().filesystem}",
        "folderPath": "@{concat('bronze/transactions/yyyy=', dataset().yyyy, '/mm=', dataset().mm, '/dd=', dataset().dd)}",
        "fileName": "@{concat('transactions_', dataset().yyyy, dataset().mm, dataset().dd, '.csv')}"
      },
      "columnDelimiter": ",",
      "encodingName": "UTF-8",
      "firstRowAsHeader": true
    }
  }
}